.container{
  height: 1500rpx;
}
.top-tab{
  width: 750rpx;
  height: 100rpx;
  background: #298DE5;
  color: #8CCEFD;
  font-size: 28rpx;
  line-height: 100rpx;
  box-shadow: 0 2px 2px #bebebe;
  margin: 0 0 8rpx 0;
  z-index: 9999;
}

.invitation{
  flex: none;
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  align-items: center;
  background-color: #8CCEFD;
  height: 80rpx;
  padding: 0 40rpx;
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #fff;
  border-radius: 10rpx;
}
.write{
  width: 43rpx;
  height: 40rpx;
}

.toptab.active{
  color: #ffffff;
  border-bottom: solid 2px #ffffff;
}

.placehold{
  font-size: 28rpx;
  padding: 0rpx 0;
}

.top-tab.swiper {
  flex: 1;
}
.top-tab.swiper .content-container {
  width: 100%;
  height: 100%;
}
.top-tab.swiper .content-container .boss {
  height: 3em;
  text-align: center;
  color: #225BDB;
  display: flex;
  justify-content: center;
  align-items: center;
}
.top-tab.swiper .content-container .content-item {
  height: 30vh;
}

.container .feed-item .feed-content .question a{
  display: inline-block;
  height: 40rpx;
}
.container .feed-item .feed-content .question .avatar image{
  /*position: absolute;*/
  display: inline-block;
  width: 45rpx;
  height: 45rpx;
  border-radius: 45rpx;
  top: 10rpx;
  vertical-align: middle;
}

.container .feed-item .feed-content .question text{
  font-size: 28rpx;
  font-weight: 600px;
  line-height: 40rpx;
  text-space: 5rpx;
}

.topic-placeholder {
	display: flex;
	justify-content: center;
	align-items: center;
  font-size: 28rpx;
  margin-top: 375rpx;
	color: #aaa;
}

.join-topic-placeholder {
	display: flex;
	justify-content: center;
	align-items: center;
  font-size: 28rpx;
  margin-top: 375rpx;
	color: #aaa;
}